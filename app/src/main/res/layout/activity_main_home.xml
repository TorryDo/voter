<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient1"
    android:layout_height="match_parent"
    tools:context=".Main_home">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.915"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_home"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#000000"
        app:tabTextColor="@color/cam_sang"
        app:tabIconTint="@color/cam_sang"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbarStyle="outsideOverlay"

        app:tabIndicatorAnimationDuration="400"
        app:tabRippleColor="@color/cam_sang"
        app:tabUnboundedRipple="true"
        app:tabMode="fixed"

        app:layout_constraintTop_toBottomOf="@id/g1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

