<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    tools:context=".activity.Main_comment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gbot_cmt"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_cmt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gbot_cmt"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <EditText
        android:id="@+id/edit1_cmt"
        android:textColor="@color/cam_sang"
        app:layout_constraintRight_toLeftOf="@id/btadd_cmt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gbot_cmt"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/btadd_cmt"
        app:layout_constraintHorizontal_weight="0.3"
        android:background="@drawable/button_tron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/edit1_cmt"
        app:layout_constraintTop_toBottomOf="@id/gbot_cmt"
        android:text="thÃªm"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>