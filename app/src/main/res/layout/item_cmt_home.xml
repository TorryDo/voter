<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtkey_item_cmt"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_item_cmt"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/cam_sang"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_item_cmt"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/cam_sang"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt1_item_cmt"
                android:text="một con vịt xòe ra 2 cái cánh"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtTime_item_cmt"
                android:text="vừa xong"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/cam_sang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtlike_item_cmt"
                android:text="yêu thích"
                android:textStyle="bold"
                android:textColor="@color/cam_sang"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtcmt_item_cmt"
                android:text="bình luận"
                android:textStyle="bold"
                android:textColor="@color/cam_sang"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>