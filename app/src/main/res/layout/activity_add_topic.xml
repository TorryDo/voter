<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_topic">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gleft_add"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gright_add"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gtop_add"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gbot_add"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/img_add"
        app:layout_constraintTop_toBottomOf="@id/gtop_add"
        app:layout_constraintBottom_toTopOf="@id/gbot_add"
        app:layout_constraintRight_toLeftOf="@id/gright_add"
        app:layout_constraintLeft_toRightOf="@id/gleft_add"
        android:src="@drawable/ic_launcher_background"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <Button
        android:id="@+id/bt_add"
        app:layout_constraintTop_toTopOf="@id/gbot_add"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>